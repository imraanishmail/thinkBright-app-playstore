<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B44F2"
    tools:context="imraan.imraan.thinkbright.AboutUs2">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnBack2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="55dp"
        android:clickable="true"
        android:foreground="@drawable/back"
        android:onClick="onBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

    <ImageView
        android:id="@+id/imgViewLogo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txtAboutUs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="116dp"
        android:fontFamily="@font/poppins"
        android:text="About Us"
        android:textColor="#FFD700"
        android:textSize="37sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewLogo2" />

    <ImageView
        android:id="@+id/imgViewCloudABC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="77dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAboutUs2"
        app:srcCompat="@drawable/cloud_abc" />

    <TextView
        android:id="@+id/txtAboutUsDesc2"
        android:layout_width="315dp"
        android:layout_height="105dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/poppins_medium"
        android:text="We plan to expand and create many  more quizzes and guidance practices in the future to help more students."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewCloudABC" />

    <Button
        android:id="@+id/btnNext2"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="135dp"
        android:backgroundTint="#F5004B"
        android:fontFamily="@font/poppins_medium"
        android:letterSpacing="0"
        android:onClick="onNext"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:cornerRadius="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAboutUsDesc2" />

</androidx.constraintlayout.widget.ConstraintLayout>