<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B44F2"
    tools:context=".Welcome2">

    <ImageView
        android:id="@+id/imgViewHomeBG2"
        android:layout_width="580dp"
        android:layout_height="851dp"
        android:layout_marginTop="700dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931"
        app:srcCompat="@drawable/think_bright_background" />

    <Button
        android:id="@+id/btnAboutUs"
        android:layout_width="239dp"
        android:layout_height="70dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#F5004B"
        android:fontFamily="@font/poppins_bold"
        android:letterSpacing="0"
        android:onClick="aboutClick"
        android:text="About Us"
        android:textAllCaps="false"
        android:textSize="28sp"
        app:cornerRadius="44dp"
        app:layout_constraintBottom_toTopOf="@+id/btnStartQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStartQuiz"
        android:layout_width="239dp"
        android:layout_height="70dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#F5004B"
        android:fontFamily="@font/poppins_bold"
        android:letterSpacing="0"
        android:onClick="quizClick"
        android:text="Start Quizzes"
        android:textAllCaps="false"
        android:textSize="28sp"
        app:cornerRadius="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>